{
  "name": "carbonio-files-public-folder-ui",
  "description": "Files Public Folder module",
  "private": true,
  "version": "0.0.4",
  "type": "module",
  "scripts": {
    "predev": "npm run translations:generate",
    "dev": "vite",
    "prebuild": "rm -rf dist/*",
    "build": "tsc && vite build",
    "build:dev": "npm run build -- --mode=development",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0 --resolve-plugins-relative-to node_modules/@zextras/carbonio-ui-configs",
    "lint:fix": "npm run lint -- --fix",
    "prepreview": "npm run build -- --mode preview",
    "preview": "vite preview --mode preview",
    "test": "vitest run",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@zextras/carbonio-design-system": "github:zextras/carbonio-design-system#react-18",
    "graphql": "^16.8.1",
    "i18next": "^23.10.1",
    "i18next-browser-languagedetector": "^7.2.1",
    "i18next-http-backend": "^2.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.0",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@faker-js/faker": "^8.4.1",
    "@graphql-codegen/add": "^5.0.2",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typed-document-node": "^5.0.6",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.6",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "@vitest/coverage-v8": "^1.4.0",
    "@zextras/carbonio-ui-configs": "^1.0.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "msw": "^2.2.14",
    "typescript": "~5.3.3",
    "vite": "^5.2.7",
    "vite-plugin-static-copy": "^1.0.4",
    "vitest": "^1.4.0"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "config": {
    "translations_repository": "git@github.com:Zextras/carbonio-files-ui-i18n.git"
  },
  "carbonio": {
    "name": "carbonio-files-public-folder-ui"
  }
}
