{
  "name": "carbonio-files-public-folder-ui",
  "description": "Files Public Folder module",
  "private": true,
  "version": "0.0.4",
  "type": "module",
  "scripts": {
    "predev": "npm run translations:generate",
    "dev": "vite",
    "prebuild": "rm -r dist/* || true",
    "build": "tsc && vite build",
    "build:dev": "npm run build -- --mode=development",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0 --resolve-plugins-relative-to node_modules/@zextras/carbonio-ui-configs",
    "lint:fix": "npm run lint -- --fix",
    "prepreview": "npm run build -- --mode preview",
    "preview": "vite preview --mode preview",
    "test": "vitest run",
    "prepare": "husky install",
    "type-check": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.ts",
    "translations:generate": "i18next-scanner --config i18next-scanner.config.cjs",
    "translations:pull": "git subtree pull --squash --prefix translations $npm_package_config_translations_repository master"
  },
  "dependencies": {
    "@zextras/carbonio-design-system": "github:zextras/carbonio-design-system#react-18",
    "graphql": "^16.8.1",
    "i18next": "^23.7.7",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@commitlint/types": "^18.1.0",
    "@faker-js/faker": "^8.2.0",
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.29",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@zextras/carbonio-ui-configs": "^1.0.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.0",
    "i18next-scanner": "^4.4.0",
    "jsdom": "^24.0.0",
    "msw": "^2.1.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.12",
    "vite-plugin-static-copy": "^1.0.1",
    "vitest": "^0.34.6"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "config": {
    "translations_repository": "git@github.com:Zextras/carbonio-files-ui-i18n.git"
  },
  "carbonio": {
    "name": "carbonio-files-public-folder-ui"
  }
}
